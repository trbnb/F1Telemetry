<Window x:Class="DesktopClient.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClient.Main"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" Height="300" Width="300">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <StackPanel>
        <Button Command="{Binding StartCommand}">Start</Button>
        <Button Command="{Binding PauseCommand}">Pause</Button>
    </StackPanel>
</Window>

